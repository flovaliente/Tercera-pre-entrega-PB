<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
<div class="container">
    <h1>Sign up</h1>
    <form action="/api/users/register" method="post" id="registerForm">
        <input id="firstName" type="text" placeholder="First name" required>
        <input id="lastName" type="text" placeholder="Last Name" required>
        <input id="email" type="email" placeholder="Email" required>
        <input id="age" type="number" placeholder="Age" required>
        <input id="password" type="password" placeholder="Password" required>
        <button id="registerButton" class="btn submit" type="submit">Sign up</button>
        <div class="redirect-login">
            <p>Already have an account?</p>
            <a href="/login">Login</a>
        </div>
    </form>
</div>
{{#if failRegister}}
  <script type="text/javascript">
    alert('Register Failed!');
  </script>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/register/index.js"></script>